<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- List View -->
    <record id="view_library_author_list" model="ir.ui.view">
        <field name="name">library.author.list</field>
        <field name="model">library.author</field>
        <field name="arch" type="xml">
            <list string="Authors">
                <field name="name"/>
                <field name="age"/>
          
          
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_library_author_form" model="ir.ui.view">
        <field name="name">library.author.form</field>
        <field name="model">library.author</field>
        <field name="arch" type="xml">
            <form string="Author">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="age"/>
                    </group>
                    <notebook>
                        <page string="Books">
                            <field name="book_ids"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_library_author" model="ir.actions.act_window">
        <field name="name">Authors</field>
        <field name="res_model">library.author</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_library_root" name="Library"/>
    <menuitem id="menu_library_author" name="Authors" parent="menu_library_root" action="action_library_author"/>
</odoo>